---
import BaseLayout from "layouts/BaseLayout.astro"
import Github from "components/Github.astro"
import Venn from "components/Venn.astro"
import Logos from "components/Logos.astro"
---
<BaseLayout title="home">
  <section class="main">
    <h2 class="main__headline">
      I'm a multi-media artist and digital creative
      <span class="main__punctuation">.</span>
    </h2>

    <Venn />
    <Logos />

    <div class="main__contact">
      <a href="mailto:matt@sciencefidelity.co.uk" class="main__email">
        matt@sciencefidelity.co.uk
      </a>
    </div>

    <a href="https://github.com/sciencefidelity" target="_blank" rel="noreferrer">
      <span class="screen-reader-text">Visit me on Github</span>
      <Github />
    </a>
  </section>
</BaseLayout>

<style lang="scss">
  .main {
    position: relative;
    height: calc(100vh - 12em);
    overflow: hidden;
    font-size: 0.695vw;
    &__headline {
      padding: 2.36em 0 0 2.36em;
      font-family: var(--sans);
      font-size: 4.5em;
      line-height: 0;
      transform: rotate(4.5deg);
    }
    &__punctuation {
      color: var(--pink);
    }
    &__contact {
      position: absolute;
      top: 49em;
      right: 11em;
      transform: rotate(4.5deg);
    }
    &__email {
      font-family: var(--mono);
      font-size: 2.8em;
      font-weight: 400;
      line-height: 1.2;
      color: var(--blue);
      text-decoration: none;
    }
  }
</style>

